<html lang="en" class="no-js">
 <!--<![endif]-->
<head>
    <meta charset="UTF-8" />
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Login and Registration Form with HTML5 and CSS3" />
    <meta name="keywords" content="html5, css3, form, switch, animation, :target, pseudo-class" />
    <meta name="author" content="Codrops" />
    <link rel="shortcut icon" href="../favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/css/demo.css" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <link rel="stylesheet" type="text/css" href="~/css/animate-custom.css" />
</head>
<body>
    <div class="container">
   
        <header>
            <h1>Formulaire de connexion et d'inscription </h1>
        </header>
        <section>
            <div id="container_demo">
                <!-- hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4  -->
                <a class="hiddenanchor" id="toregister"></a>
                <a class="hiddenanchor" id="tologin"></a>
                <div id="wrapper">
                    <div id="login" class="animate form"> 
                        <form action="/Login/LoginTrait" autocomplete="on" method="post"> 
                
                            <h1>Connectez-vous</h1>
                            <p> 
                                <label for="username" class="uname" data-icon="u"> Votre Email </label>
                                <input id="username" name="email" required="required" type="text" placeholder="mymail@mail.com" />
                            </p>
                            <p>
                                <label for="password" class="youpasswd" data-icon="p"> Votre mot de passe </label>
                                <input id="password" name="mdp" required="required" type="password" placeholder="eg. X8df!90EO" />
                            </p>
         
							<p>
								@Html.ActionLink("ForgotPassword?", "ForgotPassword","Login")
							</p>
                            <p class="login button">
                                <input type="submit" value="Login" />
                            </p>
                            <p class="change_link">
                                Vous n'avez encore de compte ?
                                <a href="#toregister" class="to_register">Rejoignez-nous</a>
                            </p>
                        </form>
                    </div>

                    <div id="register" class="animate form">
                        <form action="/Login/RegisterTrait" method="post">
                            <h1> Inscrivez-vous </h1>
                            <p>
                                <label for="usernamesignup" class="uname" data-icon="u">Nom</label><br />
                                <input id="usernamesignup" name="nom" required="required" type="text" placeholder="mysuperusername690" />
                            </p>
                            <p>
                                <label for="usernamesignup" class="uname" data-icon="u">Prénom</label><br />
                                <input id="usernamesignup" name="prenom" required="required" type="text" placeholder="mysuperusername690" />
                            </p>
                            <p>
                                <label for="emailsignup" class="youmail" data-icon="e">E-mail</label><br />
                                <input id="emailsignup" name="email" required="required" type="email" placeholder="mysupermail@mail.com" />
                            </p>
                            <p>
                                <label for="passwordsignup" class="youpasswd" data-icon="p">Mot de passe</label><br />
                                <input id="passwordsignup" name="mdp" required="required" type="password" placeholder="eg. X8df!90EO" />
                            </p>
                            <p>
                                <label for="passwordsignup" class="youpasswd" data-icon="p">Age</label><br />
                                <input id="passwordsignup" name="age" required="required" type="text" placeholder="eg. X8df!90EO" />
                            </p>
                            <p>
                                <label for="passwordsignup" class="youpasswd" data-icon="p">Question secrète (Le nom de famille de votre mère)</label><br />
                                <input id="passwordsignup" name="qst" required="required" type="text" placeholder="Un nom de famille" />
                            </p>
                            <p class="signin button">
                                <input type="submit" value="Sign up" />
                            </p>
                            <p class="change_link">
                                Vous avez déjà un compte ?
                                <a href="#tologin" class="to_register" name="login"> Se connecter </a>
                            </p>
                        </form>
                    </div>

                </div>
            </div>
        </section>
    </div>
</body>
</html>

